            div(style="margin: 10px;")
                {% for error in message._schema %}
                span(style="color: var(--color__danger);") {{error}}<br>
                {% endfor %}
            .form__group
                div 分析する店舗は？
                select#select-store(name='store_id')
                    option(value='', disabled) 店舗選択
                    {% for store in stores %}
                    option(value=store.storeId) {{ store.storeId }} - {{ store.storeName }}
                    {% endfor %}
            .from__group
                label(for="search-from") いつから分析する？
                input#search-from.datepicker(name="date_from", placeholder="")
                div(style="margin: 10px;")
                    {% for error in message.date_from %}
                    span(style="color: var(--color__danger);") {{error}}<br>
                    {% endfor %}
            .from__group
                label(for="search-to") いつまで分析する？
                input#search-to.datepicker(name="date_to", placeholder="")
                div(style="margin: 10px;")
                    {% for error in message.date_to %}
                    span(style="color: var(--color__danger);") {{error}}<br>
                    {% endfor %}

            button(type="submit") 分析開始

