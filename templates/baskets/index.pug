{% extends "base.pug" %}
{% block body %}

#basket-main
    h1 バスケット分析
        div.
            {{ message }}
        .container
            form(action="summary", method="get")
                {{ form.hidden_tag() }}
                div(style="margin: 10px;")
                    {% for error in form.storeField.errors %}
                    span(style="colod: red;")
                    {% endfor %}
                    {% for error in form.dateFromField.errors %}
                    span(style="colod: red;")
                    {% endfor %}
                    {% for error in form.dateToField.errors %}
                    span(style="colod: red;")
                    {% endfor %}

                    {{ form.storeField.label }}:
                    {{ form.storeField(class="sel sel--black-panther") }}

                    {{ form.dateFromField.label }}:
                    {{ form.dateFromField()}}

                    {{ form.dateToField.label }}:
                    {{ form.dateToField()}}
                    div どの店舗で分析する？
                    .sel.sel--black-panther.test2
                        select#select-store(name="condition_store")
                            option(value="" disabled) 店舗選択
                            {% for store in stores %}
                            option(value=store.storeId) {{ store.storeId }} - {{ store.storeName }}
                            {% endfor %}
                .from__group
                    dev 分析期間は？
                    .item
                        label(for="search-from") 分析開始日
                        input#search-from.datepicker(name="condition_date_from", placeholder="")
                    .item
                        label(for="search-to") 分析終了日
                        input#search-to.datepicker(name="condition_date_to", placeholder="")

                button(type="submit") submit

//- datepicker.js
link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css")
script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js")
script(src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js")

script.
    $(".datepicker").datepicker({
        dateFormat: 'yy-mm-dd',
        firstDay: 0, //0?6　0が日曜、1が月曜、2が火曜・・・・6が土曜
        monthNames: [ "1月", "2月", "3月", "4月", "5月", "6月", "7月", "8月", "9月", "10月", "11月", "12月" ]// 初期値[ "January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December" ]
    });


{% endblock %}
